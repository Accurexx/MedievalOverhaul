<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=============== Component Medieval ====================-->

  <ThingDef ParentName="ResourceBase">
    <defName>DankPyon_ComponentBasic</defName>
    <label>Basic component</label>
    <description>Miscellaneous gears, wheels, nails. Necessary for assembling complex contraptions.</description>
    <graphicData>
      <texPath>Resources/ComponentMedieval</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <stackLimit>50</stackLimit>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>70</MaxHitPoints>
      <MarketValue>15</MarketValue>
      <Mass>0.6</Mass>
      <Flammability>0.6</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <intricate>true</intricate>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>

  <!--=============== Papers please ====================-->

  <ThingDef ParentName="ResourceBase">
    <defName>DankPyon_Paper</defName>
    <label>Paper</label>
    <description>An empty sheet of paper. Useful for scribbling or writing notes.</description>
    <graphicData>
      <texPath>Resources/Paper</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <soundInteract>Wood_Drop</soundInteract>
    <soundDrop>Standard_Drop</soundDrop>
    <healthAffectsPrice>false</healthAffectsPrice>
    <statBases>
      <MaxHitPoints>20</MaxHitPoints>
      <MarketValue>2</MarketValue>
      <Mass>0.1</Mass>
      <Flammability>1</Flammability>
      <DeteriorationRate>2.0</DeteriorationRate>
    </statBases>
    <thingCategories>
      <li>Manufactured</li>
    </thingCategories>
  </ThingDef>

  <!--=============== Ballista Bolts ====================-->

  <ThingDef ParentName="MakeableShellBase">
    <defName>DankPyon_BallistaBolt</defName>
    <label>Ballista Bolts</label>
    <description>A heavy bolt used by ballistas.</description>
    <graphicData>
      <texPath>Resources/BallistaBolt</texPath>
      <graphicClass>Graphic_StackCount</graphicClass>
    </graphicData>
    <uiIconPath>Resources/BallistaBolt_Icon</uiIconPath>
    <costList>
      <DankPyon_IronIngot>1</DankPyon_IronIngot>
      <WoodLog>15</WoodLog>
    </costList>
    <recipeMaker>
      <researchPrerequisite>DankPyon_SiegeEngines</researchPrerequisite>
    </recipeMaker>
  </ThingDef>

