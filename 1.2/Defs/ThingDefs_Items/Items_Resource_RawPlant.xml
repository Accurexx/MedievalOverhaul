<?xml version="1.0" encoding="utf-8" ?>

<Defs>

<!-- ==================== Raw Plants Resource ======================= -->  

  <ThingDef ParentName="RoughPlantBase">
    <defName>DankPyon_RawWheat</defName>
    <label>wheat</label>
    <description>Wheat is a grain that can be milled into flour.</description>
    <graphicData>
	  <drawSize>(1,1)</drawSize>
      <texPath>Plants/RawWheat</texPath>
	  <graphicClass>Graphic_StackCount</graphicClass>	
    </graphicData>
    <statBases>
      <MarketValue>2.0</MarketValue>
    </statBases>
    <ingestible>
      <foodType>Seed</foodType>
 	 <preferability>NeverForNutrition</preferability>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>60</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>
  
  <ThingDef ParentName="PlantFoodRawBase">
    <defName>DankPyon_RawGrapes</defName>
    <label>grapes</label>
    <description>Tasty grapes that can be eaten raw. Useful for making wine.</description>
    <graphicData>
      <texPath>Plants/RawGrape</texPath>
    </graphicData>
    <statBases>
      <MarketValue>1.2</MarketValue>
      <Mass>0.027</Mass>
    </statBases>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>14</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
    <ingestible>
      <preferability>RawTasty</preferability>
      <foodType>VegetableOrFruit</foodType>
    </ingestible>
  </ThingDef>

  <ThingDef ParentName="RoughPlantBase">
    <defName>DankPyon_Sugarcane</defName>
    <label>sugarcane</label>
    <description>PLACEHOLDER</description>
    <graphicData>
	  <drawSize>(1,1)</drawSize>
      <texPath>Plants/RawSugarcane</texPath>
	  <graphicClass>Graphic_Single</graphicClass>	
    </graphicData>
    <statBases>
      <MarketValue>1.2</MarketValue>
    </statBases>
    <ingestible>
      <foodType>Seed</foodType>
 	 <preferability>NeverForNutrition</preferability>
    </ingestible>
    <comps>
      <li Class="CompProperties_Rottable">
        <daysToRotStart>20</daysToRotStart>
        <rotDestroys>true</rotDestroys>
      </li>
    </comps>
  </ThingDef>

<!-- ==================== Raw Plants Food ======================= -->

