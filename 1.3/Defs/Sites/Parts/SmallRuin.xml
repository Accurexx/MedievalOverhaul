<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <SitePartDef>
    <defName>DankPyon_Small_Ruin</defName>
    <label>small ruin</label>
    <description>A small ruin.</description>
    <siteTexture>WorldObjects/Ruins</siteTexture>
    <expandingIconTexture>WorldObjects/Ruins</expandingIconTexture>
    <handlesWorldObjectTimeoutInspectString>true</handlesWorldObjectTimeoutInspectString>
    <tags>
      <li>DankPyon_Small_Ruin</li>
    </tags>
  </SitePartDef>

  <SitePartDef>
    <defName>DankPyon_EnnemiesPresence_Brigand</defName>
    <label>brigand gathering</label>
    <description>Brigands are present in this ruin.</description>
    <workerClass>SitePartWorker_Ambush</workerClass>
    <siteTexture>WorldObjects/MedievalSettlement</siteTexture>
    <expandingIconTexture>WorldObjects/Ruins</expandingIconTexture>
    <handlesWorldObjectTimeoutInspectString>true</handlesWorldObjectTimeoutInspectString>
    <wantsThreatPoints>true</wantsThreatPoints>
    <tags>
      <li>DankPyon_EnnemiesPresence_Brigand</li>
    </tags>
  </SitePartDef>

  <GenStepDef>
    <defName>DankPyon_EnnemiesPresence_Brigand</defName>
    <linkWithSite>DankPyon_EnnemiesPresence_Brigand</linkWithSite>
    <order>400</order>
    <genStep Class="KCSG.GenStep_EnnemiesPresence">
      <forcedfaction>DankPyon_BrigandFaction</forcedfaction>
      <spawnOnEdge>false</spawnOnEdge>
      <defaultPointsRange>300~500</defaultPointsRange> <!-- Settlement alike -->
      <pointMultiplier>1.0</pointMultiplier>
    </genStep>
  </GenStepDef>
</Defs>