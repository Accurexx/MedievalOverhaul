        <equippedStatOffsets>
            <PawnBeauty>+1</PawnBeauty>
            <SocialImpact>0.1</SocialImpact>
            <TradePriceImprovement>0.05</TradePriceImprovement>
            <SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
        </equippedStatOffsets>

        
