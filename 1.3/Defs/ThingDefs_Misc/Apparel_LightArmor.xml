<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>DankPyon_Apparel_Leather_Tunic</defName>
		<label>leather tunic</label>
		<description>A simple vest stitched from treated and tanned leathers, both comfortable and pragmatic. The thick leather is a decent balance between protection and encumbrance.</description>
		<graphicData>
			<texPath>Apparel/LightArmor/Leather_Tunic</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<recipeMaker>
			<skillRequirements>
				<Crafting>3</Crafting>
			</skillRequirements>
			<researchPrerequisite>DankPyon_Tailoring</researchPrerequisite>
		</recipeMaker>
		<costStuffCount>40</costStuffCount>
		<stuffCategories>
			<li>Leathery</li>
		</stuffCategories>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToMake>5000</WorkToMake>
			<Mass>1</Mass>
			<StuffEffectMultiplierArmor>0.3</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.25</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.11</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
			</bodyPartGroups>
			<wornGraphicPath>Apparel/LightArmor/Leather_Tunic</wornGraphicPath>
			<tags>
				<li>DankPyon_Peasant</li>
				<li>DankPyon_Bandit</li>
                <li>DankPyon_Mercenary</li>
				<li>DankPyon_MercenaryHeavy</li>
				<li>DankPyon_Archer</li>
                <li>DankPyon_Footman</li>
                <li>DankPyon_FootmanHeavy</li>
                <li>DankPyon_Knight</li>
                <li>DankPyon_HedgeKnight</li>
            </tags>
			<layers>
				<li>OnSkin</li>
			</layers>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
	</ThingDef>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>DankPyon_Apparel_Padded_Surcoat</defName>
		<label>padded surcoat</label>
