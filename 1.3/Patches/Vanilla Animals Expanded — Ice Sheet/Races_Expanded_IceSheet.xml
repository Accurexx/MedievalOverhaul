<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>Vanilla Animals Expanded â€” Ice Sheet</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Normal</success>
      <operations>

        <li Class="PatchOperationRemove">
          <xpath>Defs/ThingDef[defName="AEXP_Penguin" or defName="AEXP_Seal" or defName="AEXP_Walrus"]/race/leatherDef</xpath>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/PawnKindDef [defName="AEXP_Penguin"]/lifeStages/li[3]</xpath>

          <value>
            <butcherBodyPart>
              <bodyPartGroup>HeadAttackTool</bodyPartGroup>
              <thing>DankPyon_Hide_BirdLarge</thing>
              <allowFemale>true</allowFemale>
            </butcherBodyPart>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/PawnKindDef [defName="AEXP_Seal"]/lifeStages/li[3]</xpath>

          <value>
            <butcherBodyPart>
              <bodyPartGroup>HeadAttackTool</bodyPartGroup>
              <thing>DankPyon_Hide_HideLarge</thing>
              <allowFemale>true</allowFemale>
            </butcherBodyPart>
          </value>
        </li>

        <li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef [defName="DankPyon_Hide_Walrus"]</xpath>
          <value>

            <ThingDef ParentName="DankPyon_HideBaseHuge">
              <defName>DankPyon_Hide_Walrus</defName>
              <label>huge walrus hide</label>
              <graphicData>
                <color>(130,126,119)</color>
              </graphicData>
              <statBases>
                <MarketValue>388.8</MarketValue>
                <Mass>36</Mass>
              </statBases>
              <butcherProducts Inherit="False">
                <Leather_Bear>144</Leather_Bear>
              </butcherProducts>
              <stuffProps>
                <color>(130,126,119)</color>
              </stuffProps>
            </ThingDef>

          </value>
        </li>


        <li Class="PatchOperationReplace">
          <xpath>Defs/PawnKindDef [defName="AEXP_Walrus"]/lifeStages/li[3/butcherBodyPart]</xpath>

          <value>
            <butcherBodyPart>
              <bodyPartGroup>HeadAttackTool</bodyPartGroup>
              <thing>AEXP_Hide_Walrus</thing>
              <allowFemale>true</allowFemale>
            </butcherBodyPart>
          </value>
        </li>

      </operations>
    </match>
  </Operation>
</Patch>
